@page
@model TaoxanhProxy.Pages.ProfileModel
@{
}

<div class="vh-100 h-100">
    <div class="row  justify-content-center">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Profile</h5>
                    <form method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="UserModel.UserName" type="text" readonly class="form-control" placeholder="your username">
                            <label for="floatingInput">Username</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="UserModel.Token" type="text" readonly class="form-control" id="floatingToken" placeholder="Token">
                            <label for="floatingToken">Token</label>
                        </div>


                        <div class="d-grid">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit" asp-page-handler="LogOut">
                                Logout
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>